<component name="SettingsRow" extends="Group">
  <interface>
    <field id="itemContent" type="node" />
    <field id="focused" type="boolean" />
    <field id="savedIndex" type="integer" />
  </interface>

  <children>
    <!-- Navy focus bar with FULL alpha (AARRGGBB) -->
    <Rectangle id="bar" width="1680" height="64" color="0xFF103A57" visible="false" />
    <Label id="label" translation="[16,0]" />  <!-- Colors set in BRS -->
    <Label id="check" horizAlign="right" translation="[1600,0]" text="" />
  </children>

  <script type="text/brightscript" uri="pkg:/components/SettingsRow.brs" />
</component>
