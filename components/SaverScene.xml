<component name="SaverScene" extends="Scene">
  <interface>
    <!-- `mode` is assigned by the entry point before the scene is shown. -->
    <field id="mode" type="string" value="" />
    <field id="close" type="boolean" value="false" alwaysNotify="true" />
  </interface>

  <children>
    <Rectangle id="bg" width="1920" height="1080" color="0x000000FF" />
    <Poster id="img" width="1920" height="1080" loadDisplayMode="scaleToFill" visible="true" />
    <Timer id="tick" duration="5.0" repeat="true" control="stop" />
    <Label id="hint" translation="[40,1000]" color="0xFFFFFFFF" text="" />
  </children>

  <script type="text/brightscript" uri="pkg:/components/SaverScene.brs" />
</component>
