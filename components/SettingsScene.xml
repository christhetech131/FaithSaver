<component name="SettingsScene" extends="Scene">
  <children>
    <Poster id="bg" uri="pkg:/images/FaithSaver-Splash-1920x1080.jpg"
            width="1920" height="1080" loadDisplayMode="scaleToFill" />
    <Rectangle id="overlay" width="1920" height="1080" color="0xFFFFFF40" />
    <Label id="title" translation="[120,80]" font="Medium" text="FaithSaver Settings" color="0x000000FF" />
    <LabelList id="list"
               translation="[120,160]"
               itemSize="[1680, 72]"
               numRows="10"
               drawFocusFeedback="false"
               itemComponentName="SettingsRow" />
    <Label id="hint" translation="[120, 980]" font="Small" color="0x000000FF"
           text="OK = Select    |    Back = Close" />
  </children>
  <script type="text/brightscript" uri="pkg:/components/SettingsScene.brs" />
</component>
