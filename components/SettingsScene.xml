<component name="SettingsScene" extends="Scene">
  <interface>
    <field id="close" type="boolean" alwaysNotify="true" />
  </interface>

  <children>
    <!-- Background image -->
    <Poster
      id="bg"
      uri="pkg:/images/FaithSaver-Splash-1920x1080.jpg"
      width="1920"
      height="1080"
      loadDisplayMode="scaleToFill" />

    <!-- Contrast overlay (RGBA: white, ~25% opacity) -->
    <Rectangle
      width="1920"
      height="1080"
      color="0xFFFFFF40" />

    <!-- Title and hint (RGBA black) -->
    <Label
      id="title"
      translation="[120,80]"
      color="0x000000FF"
      text="FaithSaver Settings" />

    <!-- We draw rows manually inside this group -->
    <Group
      id="menu"
      translation="[120,160]" />

    <Label
      id="hint"
      translation="[120,980]"
      color="0x000000FF"
      text="Up/Down: Move   OK: Save   Back: Exit" />
  </children>

  <script type="text/brightscript" uri="pkg:/components/SettingsScene.brs" />
</component>
