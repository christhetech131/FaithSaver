<component name="SettingsScene" extends="Scene">
  <interface>
    <field id="close" type="boolean" alwaysNotify="true" />
  </interface>

  <children>
    <!-- Background image -->
    <Poster
      id="bg"
      uri="pkg:/images/FaithSaver-Splash-1920x1080.jpg"
      width="1920"
      height="1080"
      loadDisplayMode="scaleToFill" />

    <!-- Contrast overlay (RGBA: white, ~25% opacity) -->
    <Rectangle
      width="1920"
      height="1080"
      color="0xFFFFFF40" />

    <!-- Title and hint (RGBA black) -->
    <Label
      id="title"
      translation="[120,80]"
      color="0x000000FF"
      text="FaithSaver Settings" />

    <!-- We draw rows manually inside this group -->
    <Group
      id="menu"
      translation="[120,160]" />

    <Label
      id="hint"
      translation="[120,980]"
      color="0x000000FF"
      text="Up/Down: Move   OK: Save   Back: Exit   *: About" />

    <!-- Lightweight About overlay (hidden until the Options key is pressed) -->
    <Group id="about" visible="false">
      <Rectangle width="1920" height="1080" color="0x00000080" />
      <Rectangle
        width="1120"
        height="640"
        translation="[400,220]"
        color="0xFFFFFFFF"
        opacity="0.94" />
      <Label
        id="aboutTitle"
        translation="[440,260]"
        width="1040"
        height="40"
        horizAlign="left"
        vertAlign="top"
        color="0x000000FF"
        text="About FaithSaver" />
      <ScrollableText
        id="aboutText"
        translation="[440,320]"
        width="1040"
        height="520"
        text="Loading README..." />
    </Group>
  </children>

  <script type="text/brightscript" uri="pkg:/components/SettingsScene.brs" />
</component>
