<?xml version="1.0" encoding="UTF-8"?>
<component name="SettingsScene" extends="Scene">
  <interface>
    <field id="close" type="boolean" value="false" alwaysNotify="true" />
  </interface>

  <children>
    <!-- Static splash background (never the category image) -->
    <Poster id="bg" uri="pkg:/images/FaithSaver-Splash-1920x1080.jpg"
            width="1920" height="1080" loadDisplayMode="scaleToFill" />

    <!-- Title -->
    <Label id="title" translation="[80,80]" color="0x000000FF" text="FaithSaver Settings" />

    <!-- Manual menu group & highlight bar -->
    <Group id="menu" translation="[120,180]">
      <Rectangle id="hl" width="1680" height="64" color="0x103A57FF" opacity="1.0" />
    </Group>

    <!-- About overlay -->
    <Group id="about" visible="false">
      <Rectangle width="1920" height="1080" color="0x000000FF" opacity="0.4" />
      <Rectangle translation="[120,140]" width="1680" height="800" color="0xFFFFFFFF" opacity="1.0" />
      <Label id="aboutTitle" translation="[160,170]" color="0x000000FF" text="About FaithSaver" />
      <ScrollableText id="aboutText" translation="[160,220]" width="1600" height="680"
                      text="FaithSaver: rotating scenic backgrounds from offline/online sources." />
    </Group>
  </children>

  <script type="text/brightscript" uri="pkg:/components/SettingsScene.brs" />
</component>
