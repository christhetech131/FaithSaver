<?xml version="1.0" encoding="utf-8" ?>
<component name="SaverScene" extends="Scene">
  <interface>
    <field id="mode"  type="string"  value="preview" />
    <field id="close" type="boolean" value="false"   />
  </interface>

  <children>
    <!-- Backdrop + main image -->
    <Rectangle id="bg" width="1920" height="1080" color="0x000000FF" />
    <Poster    id="poster" width="1920" height="1080" loadDisplayMode="scaleToFill" />

    <!-- Preview-only hint -->
    <Label id="hint" translation="[60,990]" visible="false" text="▲/▼ change • OK pause • Back exit" />

    <!-- Rotation timer -->
    <Timer id="rotTimer" duration="5" repeat="true" control="stop" />

    <!-- Custom feed task (extends Task) -->
    <ImageFeedTask id="feedTask" />
  </children>

  <script type="text/brightscript" uri="pkg:/components/SaverScene.brs" />
</component>
